@model Assignment_Hospital_Management.Models.Doctor

<h1>Edit Doctor</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="DoctorId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialty" class="control-label"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HospitalId" class="control-label"></label>
        <input asp-for="HospitalId" class="form-control" />
        <span asp-validation-for="HospitalId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
